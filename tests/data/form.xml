<RocketForm xmlns="http://rocket.com/rf-schema"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://rocket.com/rf-schema ../../src/Views/Form/XSD/schema.xsd">

    <metadata>
        <title>Test Form</title>
        <description>Test Description</description>
        <version>1.0</version>
    </metadata>

    <layout type="modal">
        <container id="main-container" label="Personal Information" type="card" direction="row">
            <header text="Titre"  visible="true" width="1/3" />
            <thumb id="thumb" label="Thumb" name="address.id" />
            <toast id="info-toast" type="info" label="Important" description="Please fill all required fields"/>
            <p text="description" condition="(true)" />
            <textarea value="Yanis" label="Description" required="true" placeholder="Enter your description"/>
            <input name="name" type="text" label="Name" required="true" placeholder="Enter your name" default="John Dooe"/>
            <input name="address.street" type="text" label="address"/>
            <input id="email"
                   type="email"
                   label="Email"
                   required="true"
                   placeholder="Enter your email"
            />
            <input id="birthdate" type="date" label="Birth Date" format="yyyy-mm-dd"/>
            <input id="birthdate" type="empty" label="Birth Date" format="yyyy-mm-dd"/>
            <triggerUseCase name="Check" method="check_insi()">
                <param name="param1" value="value1"/>
                <param name="param1" value="value1"/>
                <param name="param1" value="value1"/>
            </triggerUseCase>
            <file id="file" label="File" required="true" multiple="true" maxSize="1000000"/>
            <status name="status" label="Status" required="true" value="active"/>
            <select
                    name="address"
                    label="Select"
                    type="chips"
                    csCondition="true"
            />
            <select name="user" type="selectBox" remote="/api/users" labelField="fullName" valueField="id" multi="true">
                <filter field="name" value="search"/>
                <filter field="order[id]" value="asc"/>
                <filter field="order[name]" value="desc"/>
            </select>
            <select name="country" type="chips" multi="true">
                <option label="France" value="FR"/>
                <option label="Spain" value="ES"/>
            </select>
            <container id="job-function" label="Job Function" direction="column">
                <input id="job-title" type="text" label="Job Title" placeholder="Enter your job title"/>
                <input id="company" type="text" label="Company" placeholder="Enter your company"/>
                <tabs id="additional-info" label="Additional Information">
                    <container id="address" label="Address">
                        <input id="street" type="text" label="Street" placeholder="Enter your street"/>
                        <input id="city" type="text" label="City" placeholder="Enter your city"/>
                        <input id="zip" type="text" label="Zip" placeholder="Enter your zip"/>
                    </container>
                </tabs>
            </container>
            <select name="select" label="Select" type="chips" csCondition="true"/>
            <select name="select" label="Select" type="chips" csCondition="true"/>

        </container>
        <tabs id="additional-info" label="Additional Information">
            <container id="address" label="Address">
                <input id="street" type="text" label="Street" placeholder="Enter your street"/>
                <input id="city" type="text" label="City" placeholder="Enter your city"/>
                <input id="zip" type="text" label="Zip" placeholder="Enter your zip"/>
            </container>
        </tabs>
        <toast id="info-toast" type="info" label="Important" description="Please fill all required fields"/>
    </layout>

    <actions>
        <button type="submit" label="Submit" id="submit-btn"/>
        <button type="reset" label="Reset" id="reset-btn"/>
    </actions>

</RocketForm>