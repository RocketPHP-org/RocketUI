<?xml version="1.0" encoding="UTF-8"?>
<RocketGrid xmlns="http://rocket.com/rg-schema"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://rocket.com/rg-schema ../../src/Views/Grid/XSD/schema.xsd">

    <metadata>
        <title>Grille utilisateurs</title>
        <description>Liste enrichie avec options</description>
        <version>2.0</version>
    </metadata>

    <toggles>
        <toggle
                name="isActive"
                label="Actif"
                type="boolean"
                icon="fa fa-check"
                icon_position="left"
                condition="status === 'active'"
        >
            <param name="targetField" value="active"/>
            <param name="trueLabel" value="Oui"/>
            <param name="falseLabel" value="Non"/>
        </toggle>
    </toggles>

    <columns>
        <column id="c1" type="string" class="autocolumn" label="Nom" field="name" sortable="true" filterable="true" align="left" hidden="(name,'=','Yanis'"/>
        <column id="c2" type="number" label="Âge" field="age" filterType="number" editable="true" editorType="number"/>
        <column id="c3" type="string" label="Nom complet" field="fullName" computed="true" expression="firstName + ' ' + lastName"/>
    </columns>

    <actions>
        <button id="btn1" name="Ajouter" type="primary" label="Ajouter un utilisateur"/>
        <button id="btn2" name="Exporter" type="secondary"/>
    </actions>

    <gridOptions>
        <pagination pageSize="20" pageSizeOptions="10,20,50"/>
        <selection mode="multiple"/>
        <export>
            <format>csv</format>
            <format>excel</format>
            <format>pdf</format>
        </export>
    </gridOptions>

    <rowActions>
        <button id="disableUser" name="Désactiver" type="danger" condition="status === 'active'"/>
        <button id="editUser" name="Modifier" type="primary"/>
        <button id="btn3" name="Open" type="open" tooltip="Ouvrir la fiche utilisateur">
            <param name="openIn" value="modal"/>
            <param name="size" value="large"/>
        </button>
    </rowActions>

</RocketGrid>
